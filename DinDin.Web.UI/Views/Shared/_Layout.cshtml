<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - DinDin</title>
    <link rel="stylesheet" type="text/css" href="http://fonts.googleapis.com/css?family=Architects+Daughter|Ceviche+One">
    <link href="~/favicon.png" rel="shortcut icon" type="image/png" />
    <meta name="viewport" content="width=device-width" />
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-2.5.3.js")" type="text/javascript"></script>
</head>
<body>
    <div id="top">
        <span id="logo">DinDin</span>
    </div>
    <div id="body">
        <div id="menu">
            <ul>
                <li><a href="/Balance">Balance</a></li>
                <li><a href="/Expenses">Expenses</a></li>
                <li><a href="/ChangePassword/Account">Manage</a></li>
            </ul>
        </div>
        @RenderBody()
    </div>
    <footer>
        <p>&copy; @DateTime.Now.Year - DinDin Development Team</p>
    </footer>
</body>
</html>
