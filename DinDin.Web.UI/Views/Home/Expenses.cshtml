@model DinDin.Web.UI.Models.ExpenseModel
@{
    ViewBag.Title = "Expenses";
}

<h2>Expenses</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<div style="float: left; border: solid 1pt cadetblue">
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <fieldset>
            <legend>ExpenseModel</legend>

            <div class="editor-label">
                @Html.LabelFor(model => model.When)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.When)
                @Html.ValidationMessageFor(model => model.When)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.What)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.What)
                @Html.ValidationMessageFor(model => model.What)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.HowMuch)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.HowMuch)
                @Html.ValidationMessageFor(model => model.HowMuch)
            </div>

            <p>
                <input type="submit" value="Add" />
            </p>
        </fieldset>
    }
</div>
@if (ViewBag.History != null)
{
    <table>
        <thead>
            <tr>
                <th>When</th>
                <th>What</th>
                <th>How Much</th>
            </tr>
        </thead>
        @foreach (DinDin.Web.UI.Models.ExpenseModel expense in ViewBag.History)
        {
            <tr>
                <td>@expense.When</td>
                <td>@expense.What</td>
                <td>@expense.HowMuch</td>
            </tr>
        }
    </table>
}